    @model ResultViewModel
    @using System.IO

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Logo</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="#">Home</a>
                </li>
            </ul>
            <a href="/Home/AdminPanel" class="btn btn-outline-primary me-2">Admin View</a>
        </div>
    </div>
</nav>

    @if (Model.Prefix.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>File Name</th>
                    <th>File Size</th>
                    <th>Select a Prefix</th>
                    <th>Select a Folder</th>
                    <th>Confidence Score</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@System.IO.Path.GetFileName(Model.FilePath)</td>
                    <td>@Model.FormattedFileSize</td>
                    <td>
                        <form>
                            <div class="form-group">
                                <select class="form-select" id="valueDropdown" name="selectedValue">
                                    @if (Model.SelectedPrefix == null)
                                    {
                                        <option selected>select an option</option>
                                        @foreach (var value in Model.Prefix)
                                        {
                                            <option value="@value">@value</option>
                                        }
                                    }
                                    else
                                    {
                                        @foreach (var value in Model.Prefix)
                                        {
                                            if (value == Model.SelectedPrefix)
                                            {
                                                <option value="@value" selected>@value</option>
                                            }
                                            else
                                            {
                                                <option value="@value">@value</option>
                                            }
                                        }
                                    }
                                </select>
                            </div>
                        </form>
                    </td>
                    <td>
                        <form>
                            <div class="form-group">
                                @if (Model.SelectedFolder.Count == 0)
                                {
                                    @Html.DropDownListFor(model => model.SelectedPrefix, new SelectList(Model.Folder, "Value", "Text"), "select an option", new { @class = "form-select", @id = "valueDropdown" })
                                }
                                else
                                {
                                    @Html.DropDownListFor(model => model.SelectedPrefix, new SelectList(Model.Folder, "Value", "Text"), Model.SelectedFolder.FirstOrDefault(), new { @class = "form-select", @id = "valueDropdown" })
                                }
                            </div>
                        </form>
                    </td>
                    <td>@Model.AverageConfidence.ToString("0.00")</td>
                </tr>
            </tbody>
        </table>
    }

    <style>
        .table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 1rem;
            background-color: transparent;
            color: #212529;
            font-size: 0.9rem;
            line-height: 1.6;
        }

        th,
        td {
            padding: 0.75rem;
            vertical-align: top;
            border-top: 1px solid #dee2e6;
        }

        thead th {
            vertical-align: bottom;
            border-bottom: 2px solid #dee2e6;
        }

        tbody + tbody {
            border-top: 2px solid #dee2e6;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        .form-label {
            margin-bottom: 0.5rem;
            font-weight: bold;
        }

        .form-select {
            display: block;
            width: 100%;
            height: calc(2.25rem + 2px);
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.5;
            color: #212529;
            background-color: #fff;
            border: 1px solid #ced4da;
            border-radius: 0.25;
        }
            </style>