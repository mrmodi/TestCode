@model TestCode.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
}


@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "login-form", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.UserName, new { @class = "form-label" })
        <div class="form-field">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-input" })
            @Html.ValidationMessageFor(m => m.UserName)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "form-label" })
        <div class="form-field">
            @Html.PasswordFor(m => m.Password, new { @class = "form-input" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
    </div>

    <div class="form-group">
        <div class="form-field">
            <button type="submit" class="btn btn-primary">Log in</button>
        </div>
    </div>
}

<style>
    .login-form {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .form-label {
        display: block;
        margin-bottom: 10px;
        font-weight: bold;
    }

    .form-field {
        margin-bottom: 20px;
    }

    .form-input {
        display: block;
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
    }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0069d9;
        }
</style>
